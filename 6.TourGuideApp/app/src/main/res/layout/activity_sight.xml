<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sight_activity_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.sight.SightActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_vertical">

        <ImageView
            android:id="@+id/sight_details_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/golden_gate_park" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_vertical">

            <TextView
                android:id="@+id/sight_details_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                tools:text="Overview" />

            <TextView
                android:id="@+id/sight_details_location_and_contact_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/padding_vertical"
                android:text="@string/sight_location_and_contact_information"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_horizontal"
                    android:src="@drawable/ic_place_24dp" />

                <TextView
                    android:id="@+id/sight_details_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="map"
                    android:textSize="@dimen/text_size_description"
                    tools:text="Steiner St and Hayes St" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_horizontal"
                    android:src="@drawable/ic_stay_current_portrait_24dp" />

                <TextView
                    android:id="@+id/sight_details_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:textSize="@dimen/text_size_description"
                    tools:text="+1 415-218-0259" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_horizontal"
                    android:src="@drawable/ic_web_24dp" />

                <TextView
                    android:id="@+id/sight_details_web_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:textSize="@dimen/text_size_description"
                    tools:text="sfrecpark.org" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>