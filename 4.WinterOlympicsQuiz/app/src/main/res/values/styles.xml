<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/happy_monkey</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <!-- Custom styles for elements used in app -->

    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/answer_font_size</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>

    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/answer_font_size</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/textColor</item>
    </style>

</resources>
